@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Hello Code Academy!</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<script>
    function calcSumOfNumber() {

        let number1 = document.getElementById("num1").value;
        let number2 = document.getElementById("num2").value;
        let sum = parseInt(number1) + parseInt(number2);
        alert("The sum of the numbers is: " + sum);
    }
</script>

<p>Number 1:</p>
<input type="text" id="num1" class="form-control w-25" />

<p>&nbsp;</p>
<p>Number 2:</p>
<input type="text" id="num2" class="form-control w-25" />

<p>&nbsp;</p>
<button onclick="calcSumOfNumber()" class="btn btn-info">Calculate Sum</button>
